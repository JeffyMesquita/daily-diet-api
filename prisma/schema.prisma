// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  meals    Meal[]

  @@map(name: "users")
}

model Meal {
  id          String   @id @default(uuid())
  name        String
  description String
  dateTime    DateTime
  withinDiet  Boolean
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  @@map(name: "meals")
}
